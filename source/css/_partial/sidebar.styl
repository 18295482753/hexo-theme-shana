if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 0.9em
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal

.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"

.tagcloud
  a
    margin-right: 5px
    display: inline-block

.avatar
  display: block
  width: 100px
  height: 100px
  border: 1px solid rgb(225,225,226)
  margin: 0 auto
  padding: 5px

.author
  margin: 10px 0px
  font-size: 0.8em
  font-weight: bold
  text-align: center

.count-box
  text-align: center
  font-size: 1.3em
  div
    display: inline-block
    padding: 0px 10px
    &:nth-child(2)
      border-left: 2px solid rgb(225,225,226)
      border-right: 2px solid rgb(225,225,226)

.social-link
  font-size: 0px
  text-align: center
  padding: 10px 0px
  a
    display: inline-block
    width: 50%
    font-size: 15px
    font-weight: bold
    color: #6e90ef
    &:hover
      background-color: #6e90ef
      color: white
      border-radius: 5px
      text-decoration: none